<%- include('partials/header')%> 
<%- include('partials/navbar')%> 
<div class="container" style="margin-top: 50px">
<form method="POST" action="/apiv1/authenticate">
  <div class="form-group">
    <label for="exampleInputEmail1"><%= __('email_adress_input') %></label>
    <!-- <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Introduce email" > -->
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="" name="email" value="<%= email %>" >
    <small id="emailHelp" class="form-text text-muted"></small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1"><%= __('password_input') %></label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="" name="password">
  </div>

  <button type="submit" class="btn btn-primary pull-right"><%= __('submit_button') %></button>
</form>
<p class="text-danger"><%= error %></p>
</div>
<%- include('partials/footer')%> 
